<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">FOCUS DEV Login</h3>
	  </div>
	  <div class="panel-body">

			<form class="form-horizontal" role="form" method="POST">

				<input type='hidden' name="acs" value='{{acs}}'/>

				<div class="form-group">
				  <label for="firstName" class="col-sm-3 control-label">
				  	Gebruiker
				  </label>

				  <div class="col-sm-9">
				    <select id="id" class="form-control" name="user_id">
				    	{{#each users}}
				    		<option value="{{this.user_id}}">{{this.name}}</option>
				    	{{/each}}
				    </select>
				  </div>
				</div>

				<div class="form-group">
			    <div class="col-md-12 text-right">
			      <button type="submit" class="btn btn-default input-xlarge">Sign in</button>
			    </div>
				</div>
			</form>
	  </div>
	</div>
</div>


